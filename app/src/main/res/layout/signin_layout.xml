<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:weightSum="40"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="34"
        android:orientation="vertical"
        android:layout_height="650dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"/>

        <TextView
            android:id="@+id/tw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"


            android:fontFamily="@font/roboto_black"
            android:text="DK88"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold" />
        <EditText

            android:drawableLeft="@drawable/admin"
            android:layout_weight="1"
            android:id="@+id/Username"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:background="@drawable/black_bordered_frame"
            android:hint="Username"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="@drawable/black_bordered_frame">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/keyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/key" />

                <ImageView
                    android:id="@+id/eyeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/eye" />

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/eyeIcon"
                    android:layout_toEndOf="@id/keyIcon"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:hint="Password" />

            </RelativeLayout>

        </FrameLayout>


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:textSize="16dp"
            android:text="Remember me" />

        <Button
            android:id="@+id/signin1"
            android:layout_width="200dp"
            android:layout_marginTop="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#F8F8F6"
            android:background="@drawable/black_bordered_button"

            android:text="Sign in" />
        <Button
            android:id="@+id/signup"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_gravity="center"

            android:textSize="20dp"
            android:background="@drawable/white_bordered_button"
            android:textColor="@color/black"

            android:text="Sign up" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom"
        android:layout_height="25dp">
        <TextView

            android:text="Need contact admin?"

            android:layout_weight="2"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/show"
            android:textColor="@color/black"
            android:text="Get Admin info"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>


</RelativeLayout>