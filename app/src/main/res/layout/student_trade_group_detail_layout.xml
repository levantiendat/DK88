<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:weightSum="15"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_marginLeft="00dp"
        android:layout_marginRight="00dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"

            android:background="@drawable/back"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv001"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="TRADE GROUP"



            android:layout_width="220dp"
            android:layout_height="50dp"/>
            <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/report"
            android:background="@drawable/report"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/info"
            android:layout_marginLeft="10dp"
            android:background="@drawable/contact_member"/>
    </LinearLayout>

    <TextView
        android:id="@+id/giveClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Wellcome to trade group. To get class you want, you will have to give class xxxxxx "

        />
    <TextView
        android:id="@+id/tw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Choose contact button on the toolbar to get all public info of student in this trade group. After that, you should contact them to trade class."

        />
    <TextView
        android:id="@+id/tw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="If someone is scam, please let us know by report them at the button on the toolbar."

        />
    <TextView
        android:id="@+id/tw3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="After finish trade class, you can confirm finish trade and wait for other to all confirm to exit group."

        />
    <Button
        android:id="@+id/finish"
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Finish Trade"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:background="@drawable/black_bordered_button"
        android:textColor="@color/white"
        android:textSize="30dp"
        />


</LinearLayout>